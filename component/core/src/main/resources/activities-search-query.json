{
  "from": "@offset@",
  "size": "@limit@",
  "query":{
    "bool":{
      "filter":{
        "terms":{
          "permissions": [@permissions@]
        }
      },
      "should": {
        "match_phrase": {
          "body": {
            "query": "@term@",
            "boost": 5
          }
        }
      },
      "must":{
        "match":{
          "body":{
            "query": "@term@",
            "fuzziness": 2,
            "operator": "and"
          }
        }
      }
    }
  },
  "highlight" : {
    "fields" : {
      "body" : {
        "pre_tags" : ["<span class='searchMatchExcerpt'>"],
        "post_tags" : ["</span>"]
      }
    }
  }
}