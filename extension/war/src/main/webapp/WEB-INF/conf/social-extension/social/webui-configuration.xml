<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd"
  xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">

  <component>
    <key>org.exoplatform.social.webui.profile.settings.UserProfileRenderingService</key>
    <type>org.exoplatform.social.webui.profile.settings.UserProfileRenderingService</type>
  </component>

  <component>
    <type>org.exoplatform.web.application.ApplicationLifecycleExtension</type>
  </component>

  <external-component-plugins>
    <target-component>org.exoplatform.webui.ext.UIExtensionManager</target-component>
    <component-plugin>
      <name>add.action</name>
      <set-method>registerUIExtensionPlugin</set-method>
      <type>org.exoplatform.webui.ext.UIExtensionPlugin</type>
      <init-params>
        <object-param>
          <name>Relationship Activity</name>
          <object type="org.exoplatform.social.webui.activity.UIActivityExtension">
            <field name="type">
              <string>org.exoplatform.social.webui.activity.BaseUIActivity</string>
            </field>
            <field name="name">
              <string>exosocial:relationship</string>
            </field>
            <field name="component">
              <string>org.exoplatform.social.webui.activity.plugin.UIRelationshipActivity</string>
            </field>
            <field name="activityBuiderClass">
              <string>org.exoplatform.social.webui.activity.plugin.RelationshipUIActivityBuilder</string>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

  <external-component-plugins>
    <target-component>org.exoplatform.services.resources.ResourceBundleService</target-component>
    <component-plugin>
      <name>Social UI Component Resource Bundle</name>
      <set-method>addResourceBundle</set-method>
      <type>org.exoplatform.services.resources.impl.BaseResourceBundlePlugin</type>
      <init-params>
        <values-param>
          <name>classpath.resources</name>
          <description>The resources that start with the following package name should be load from file system</description>
          <value>locale.social.Webui</value>
          <value>locale.social.menu.webui</value>
        </values-param>
        <values-param>
          <name>portal.resource.names</name>
          <description>The resources that start with the following package name should be load from file system</description>
          <value>locale.social.Webui</value>
          <value>locale.social.menu.webui</value>
        </values-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

  <external-component-plugins>
    <target-component>org.exoplatform.groovyscript.text.TemplateService</target-component>
    <component-plugin>
      <name>UIPortalApplication-head</name>
      <set-method>addTemplateExtension</set-method>
      <type>org.exoplatform.groovyscript.text.TemplateExtensionPlugin</type>
      <init-params>
        <values-param>
          <name>templates</name>
          <description>The list of templates to include in HTML Page Header with UIPortalApplication.gtmpl</description>
          <value>war:/groovy/social/webui/UISocialPortalApplicationHead.gtmpl</value>
        </values-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

  <external-component-plugins>
    <target-component>org.exoplatform.web.application.ApplicationLifecycleExtension</target-component>
    <component-plugin>
      <name>SpaceAccessApplicationLifecycle</name>
      <set-method>addPortalApplicationLifecycle</set-method>
      <type>org.exoplatform.social.webui.space.access.SpaceAccessApplicationLifecycle</type>
    </component-plugin>
    <component-plugin>
      <name>OAuthLifecycle</name>
      <set-method>addPortalApplicationLifecycle</set-method>
      <type>org.exoplatform.oauth.webui.OAuthLifecycle</type>
    </component-plugin>
  </external-component-plugins>

</configuration>
